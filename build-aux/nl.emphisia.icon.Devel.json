{
    "id": "nl.emphisia.icon.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "folder_icon",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--env=RUST_LOG=folder_icon=debug",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "folder_icon=debug"
        }
    },
    "cleanup": [
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.16.0"
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DEXIV2_ENABLE_INIH=OFF",
                "-DEXIV2_BUILD_SAMPLES=OFF",
                "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                "-DEXIV2_ENABLE_BMFF=ON"
            ],
            "cleanup": [
                "/bin",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Exiv2/exiv2",
                    "tag": "v0.28.7"
                }
            ]
        },
        {
            "name": "gexiv2",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dintrospection=true",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gexiv2",
                    "tag": "0.16.0"
                }
            ],
            "post-install": [
                "mv /app/lib/pkgconfig/gexiv2-0.16.pc /app/lib/pkgconfig/gexiv2.pc"
            ]
        },
        {
            "name": "folder_icon",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}