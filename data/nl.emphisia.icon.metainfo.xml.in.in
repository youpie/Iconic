<?xml version='1.0' encoding='utf-8'?>
<component type="desktop-application">
  <!--Created with jdAppStreamEdit 9.2-->
  <id>@app-id@</id>
  <name>Iconic</name>
  <summary>Easily add icons on top of folders</summary>
  <developer id="@youpie@social.emphisia.nl">
    <name>Youpie</name>
  </developer>
  <metadata_license>CC-BY-4.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <update_contact>youpie@emphisia.nl</update_contact>
  <description>
    <p>This program allows an easy and intuitive way to add an icon on top of a folder to help you differentiate it better.</p>
    <p>This program works best in combination with the app "Icon library" found on flathub and "Adwaita Colors" found on github</p>
    <p>This program is written in Rust and Libadwaita and is my first attempt at creating an application</p>
  </description>
  <screenshots>
